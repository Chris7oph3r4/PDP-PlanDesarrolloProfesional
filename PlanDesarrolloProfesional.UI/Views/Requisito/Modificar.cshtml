@model PlanDesarrolloProfesional.Models.Models.RequisitoModel
@{
    ViewData["Title"] = "Modificar Requisito";
    List<PlanDesarrolloProfesional.Models.Models.RangoModel> RangoList = ViewBag.Rango;
    List<PlanDesarrolloProfesional.Models.Models.RutaModel> RutaList = ViewBag.Rutas;
}
<div class="card o-hidden border-0 shadow-lg my-4">
    <div class="card-body col-12">
        <!-- Nested Row within Card Body -->
        <div class="col">
            <div class="p-3">

                <div class="form-group row">
                    <div class="col-sm-9 mb-3 mb-sm-0">
                        <h4 class="mb-4">Modificar Requisito</h4>
                    </div>
                </div>
            </div>
             <form action="@Url.Action("Modificar","Requisito")" method="post" enctype="multipart/form-data" class="form">
                <div class="col-6">
                    <input  id="RequisitoID" readonly hidden class="form-control rounded-3 border border-info Codigo" asp-for="RequisitoID" type="text">
                    <span asp-validation-for="RequisitoID" class="col-12 text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-sm-2"><label class="float-left font-weight-bold h5">Nombre del Requisito</label></div>
                    <div class="col-sm-4">
                        <input asp-for="NombreRequisito" type="text" class="col-12 form-control" />
                        <span asp-validation-for="NombreRequisito" class="col-12 text-danger"></span>
                    </div>
                </div>               

                <br />

                <div class="row mt-2">
                    @if (RutaList != null)
                    {
                        <div class="col-sm-2"><label class="float-left font-weight-bold h5">Seleccione una Ruta</label></div>
                        <div class="col-sm-4">

                            <select class="float-right form-control" id="Ruta" name="Ruta" onchange="validarFormulario()" required="required">
                                    <option value="">Seleccione la ruta:</option>
                                @foreach (var ruta in RutaList)
                                {
                                    
                                    <option value="@ruta.RutaID">@ruta.NombreRuta</option>
                                }
                                </select>
                            <span id="errorRuta" class="text-danger d-none">Por favor, selecciona una ruta.</span>


                        </div>
                    }


                </div>
                <div class="row mt-2" id="RangoRemover">
                    <div class="col-sm-2"><label class="float-left font-weight-bold h5">Seleccione un Rango</label></div>
                    <div class="col-sm-4 " >
                        @Html.DropDownListFor(m => m.RangoID, new SelectList(RangoList, "RangoID", "NombreRango"), "Seleccione el rango:", new { @class = "float-right form-control", @id = "RangoRuta" })
                        @Html.ValidationMessageFor(model => model.RangoID, "")
                        <input hidden value="@Model.RangoID" name="Rango" id="RangoRuta" />
                    </div>

                </div>

                <br />
                <br />
                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div class="row center-align">
                            <div class="col-sm-6">
                                <!-- Div para el primer botón -->
                                <button class="btn btn-primary btn-block" type="submit">Modificar </button>
                            </div>
                            <div class="col-sm-6">
                                <!-- Div para el segundo botón -->
                                <a class="btn btn-secondary btn-block" asp-controller="Requisito" asp-action="Index">Regresar</a>
                            </div>
                        </div>
                    </div>
                </div>

            </form>


            <hr>
        </div>
    </div>
</div>

@section Scripts {
        <script>
                 $(document).ready(function () {
               
                // Manejar el evento de cambio del dropdown de rutas
                $("#Ruta").change(function () {
                    // Obtener el valor seleccionado de la ruta
                    var selectedRuta = $(this).val();
                   

                    // Hacer una llamada AJAX para obtener los rangos de la ruta seleccionada
                    $.ajax({
                            url: '/Requisito/ObtenerRangosPorRuta', // Reemplaza 'TuController' con el nombre de tu controlador
                        type: 'GET',
                        data: { rutaId: selectedRuta },
                        success: function (data) {
                            console.log(data);
                            // Limpiar y actualizar el dropdown de rangos
                            $("#RangoRuta").empty();
                            $.each(data, function (index, item) {
                                $("#RangoRuta").append('<option value="' + item.RangoID + '">' + item.NombreRango + '</option>');
                            });
                        },
                        error: function () {
                            alert('Error al obtener los rangos.');
                        }
                    });
                });
               
            });
        </script>
    <script>
        function validarFormulario() {
            var ruta = document.getElementById("Ruta").value;
            var errorRuta = document.getElementById("errorRuta");

            if (ruta === "") {
                errorRuta.classList.remove("d-none"); // Mostrar el mensaje de error
            } else {
                errorRuta.classList.add("d-none"); // Ocultar el mensaje de error
                // Aquí puedes añadir el código para enviar el formulario si la validación es exitosa

            }
        }
    </script>
}