@model PlanDesarrolloProfesional.Models.Models.RangoModel
@{
    ViewData["Title"] = "Modificar Rango";

    List<PlanDesarrolloProfesional.Models.Models.RutaModel> RutaList = ViewBag.Ruta;
}
<div class="card o-hidden border-0 shadow-lg my-4">
    <div class="card-body col-12">
        <!-- Nested Row within Card Body -->
        <div class="col">
            <div class="p-3">

                <div class="form-group row">
                    <div class="col-sm-9 mb-3 mb-sm-0">
                        <h4 class="mb-4">Modificar Rango del Sistema</h4>
                    </div>
                </div>
            </div>

            <form action="@Url.Action("Modificar","Rango")" method="post" enctype="multipart/form-data" class="user">
                <div class="form-group row">
                    <div class="col-sm-12 mb-12 mb-sm-12">
                        <div class="form-group row">
                            <div class="col-sm-12 mb-3 mb-sm-0">

                                <div class="col-6">
                                    <input placeholder="Escriba aquí el nombre de la Rango" id="RangoID" readonly hidden class="form-control Codigo" asp-for="RangoID" type="text">
                                    <span asp-validation-for="RangoID" class="col-12 text-danger"></span>
                                </div>
                            </div>
                        </div>
                        @*            <div class="col-sm-3">
                        <button id="btnObtenerActiveDirectory" class="btn btn-primary btn-block" type="button">Consultar &nbsp;<i class="fas fa-fw fa-search"></i></button>
                        </div>*@
                    </div>

                </div>

                <div class="form-group row">
                        <div class="col-sm-2"><label class="float-left font-weight-bold h5">Ruta</label></div>
                        <div class="col-6">
                        @Html.DropDownListFor(model => model.RutaID, new SelectList(RutaList, "RutaID", "NombreRuta"), "Seleccione el ruta:", new { @class = "float-right form-control", @Value = Model.RutaID, required = "required" })
                            @*<input  value="@Model.Descripcion" name="Descripcion" id="Descripcion" />*@
                            <span asp-validation-for="RutaID" class="col-12 text-danger"></span>
                        </div>
                </div>
                
                <div class="form-group row mt-2">
                        <div class="col-sm-2"><label class="float-left font-weight-bold h5">Nombre del Rango</label></div>                     
                        <div class="col-6">
                            @Html.EditorFor(model => model.NombreRango, new { htmlAttributes = new { @class = "form-control " } })
                            @*<input  value="@Model.NombreRango" name="NombreRango" id="NombreRango" />*@
                            <span asp-validation-for="NombreRango" class="col-12 text-danger"></span>
                        </div>
                </div>
                <div class="form-group row mt-2">
                        <div class="col-sm-2"><label class="float-left font-weight-bold h5">Descripción</label></div>
                        <div class="col-6">
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @*<input  value="@Model.Descripcion" name="Descripcion" id="Descripcion" />*@
                            <span asp-validation-for="Descripcion" class="col-12 text-danger"></span>
                        </div>
                </div>


                <br />

                <br />
                <br />
                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div class="row center-align">
                            <div class="col-sm-6">
                                <!-- Div para el primer botón -->
                                <button class="btn btn-primary btn-block" type="submit">Modificar</button>
                            </div>
                            <div class="col-sm-6">
                                <!-- Div para el segundo botón -->
                                <a class="btn btn-secondary btn-block" asp-contRutaler="Rango" asp-action="Index">Regresar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <hr>
        </div>
    </div>
</div>