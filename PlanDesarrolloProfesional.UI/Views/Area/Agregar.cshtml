@model PlanDesarrolloProfesional.Models.Models.AreaModel
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Crear Area";
    //List<Contingencia.Models.RolesModel> RolesList = ViewBag.Roles;

}

<div class="card o-hidden border-0 shadow-lg my-4">
    <div class="card-body col-12">
        <!-- Nested Row within Card Body -->
        <div class="col">
            <div class="p-3">

                <div class="form-group row">
                    <div class="col-sm-9 mb-3 mb-sm-0">
                        <h4 class="mb-4">Agregar una área al sistema</h4>
                    </div>
                </div>
            </div>

            <form action="@Url.Action("Agregar","Area")" method="post" enctype="multipart/form-data" class="form">



                <br />
            
                <div class="form-group row">
                    <div class="col-sm-2">
                        <label class="float-left font-weight-bold h5">Nombre del área</label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Nombre" type="text" class="col-12 form-control" />
                        <span asp-validation-for="Nombre" class="col-12 text-danger"></span>
                    </div>
                </div>
            
                <div class="form-group row mt-3">
                    <div class="col-sm-2">
                        <label class="float-left font-weight-bold h5">Descripción</label>
                    </div>
                    <div class="col-sm-4">
                      
                        <textarea asp-for="Descripcion" class="col-12 form-control" rows="4"></textarea>
                        <span asp-validation-for="Descripcion" class="col-12 text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-3">
                
                    <div class="col-sm-4">
                      
                        <input asp-for="CodigoDaloo" type="text" class="col-12 form-control" readonly hidden />
                     
                    </div>
                </div>


                <br />
                <br />
                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div class="row center-align">
                            <div class="col-sm-6">
                                <!-- Div para el primer botón -->
                                <button class="btn btn-primary btn-block" type="submit">Agregar &nbsp;<i class="fas fa-fw fa-plus"></i></button>
                            </div>
                            <div class="col-sm-6">
                                <!-- Div para el segundo botón -->
                                <a class="btn btn-secondary btn-block" asp-controller="Area" asp-action="Index">Regresar</a>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
            <hr>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

        });
    </script>
}